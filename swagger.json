        "summary": "Crear una reserva",
        "requestBody": {"required": true,"content": {"application/json": {}}},
        "responses": {"201": {"description": "Creada"}}
      }
    },
    "/api/reservations/{id}": {
      "get": {"summary": "Obtener por id","parameters": [{"name":"id","in":"path","required":true,"schema": {"type":"string"}}],"responses":{"200":{"description":"OK"},"404":{"description":"Not found"}}},
      "put": {"summary":"Actualizar","parameters":[{"name":"id","in":"path","required":true,"schema":{"type":"string"}}],"responses":{"200":{"description":"OK"}}},
      "delete": {"summary":"Eliminar","parameters":[{"name":"id","in":"path","required":true,"schema":{"type":"string"}}],"responses":{"204":{"description":"Deleted"}}}
